<?xml version="1.0" encoding="utf-8"?>
<androidx.fragment.app.FragmentContainerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:id="@+id/fragmentContainer"
    app:defaultNavHost = "true"
    app:navGraph = "@navigation/nav_graph"
    tools:context=".MainActivity"/>

<!-- Этот контэйнер будет содержать хост фрагмент который предоставляет библиотека по навигации,
флаг defaultNavHost позволяет получать высокоуровневые события,по типу нажатия кнопки назад,
затем мы указываем ссылку на сам граф
-->